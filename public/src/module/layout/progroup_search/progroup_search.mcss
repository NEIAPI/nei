.m-progroup-search {

  .con-wrap {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: auto;
    padding-top: 82px;
    z-index: 1;
  }

  .m-stripedlist .list-row .list-col {
    flex: 2;

    &.col-nei-actions {
      flex: 1;
    }
  }
}

.nei-scrolled {
  .m-progroup-search-tab {
    box-shadow: 0 1px 2px 0px rgba(0, 0, 0, 0.15);

    .m-tab {
      border-bottom: 0 none;
    }
  }
}
